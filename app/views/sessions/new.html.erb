<h1>Login</h1>

<%= form_tag sessions_path do %>
  <div class = "field">
    <p><%= label_tag :email %></p>
    <p><%= text_field_tag :email %></p>
  </div>

  <div class = "field">
    <p><%= label_tag :password %></p>
    <p><%= password_field_tag :password %></p>
  </div>

  <div class = "actions">
    <%= submit_tag "Login" %>
  </div>
<% end %>